{
  "name": "discordts-bot",
  "author": {
    "name": "IronBatman2715",
    "url": "https://github.com/IronBatman2715/"
  },
  "repository": "https://github.com/IronBatman2715/DiscordTS-Bot",
  "license": "GNU GPLv3",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "postinstall": "prisma generate",
    "prebuild": "rm -rf dist @types",
    "build": "tsc -p . && cp -r ./src/resources/assets ./dist/resources/assets",
    "predev": "npm run updateSchema",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "updateSchema": "prisma format && prisma generate",
    "viewDB": "prisma studio",
    "registerGlobal": "ts-node ./src/registerGlobalCommands.ts --enable-source-maps",
    "start": "node ."
  },
  "dependencies": {
    "@discordjs/builders": "^0.13.0",
    "@discordjs/rest": "^0.4.1",
    "@prisma/client": "^3.13.0",
    "discord-api-types": "^0.32.0",
    "discord-music-player": "^8.3.2",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "prisma": "^3.13.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">= 16.6.0"
  },
  "prisma": {
    "schema": "src/resources/data/mongoModels/schema.prisma"
  }
}
